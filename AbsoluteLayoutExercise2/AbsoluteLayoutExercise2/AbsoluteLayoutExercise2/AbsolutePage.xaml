        <StackLayout AbsoluteLayout.LayoutBounds="0,1,1,100" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" Padding="10,40,0,30" Orientation="Horizontal" >
            <Label Text="Profile" FontSize="15" HorizontalTextAlignment="Center" TextColor="White" WidthRequest="200" />
