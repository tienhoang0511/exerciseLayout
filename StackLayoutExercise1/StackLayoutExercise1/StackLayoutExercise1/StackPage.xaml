<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExercise1.StackPage"
             BackgroundColor="#127ac7">
    
    <StackLayout 
                 Orientation="Vertical"
                 HorizontalOptions="Fill"
                 VerticalOptions="Center"
                 Spacing="20">
        
        <StackLayout HorizontalOptions="Center">
            <Label Text="Welcome to Xamarin" FontSize="30" FontAttributes="Bold" TextColor="White"/>
            <Label Text="Cross-platform apps made easy" FontSize="18" TextColor="White" Padding="12,0,0,0"/>
        </StackLayout>

        <Button Text="Login" BackgroundColor="#1dabf0" TextColor="White" CornerRadius="5"/>
        <Button Text="Register" BackgroundColor="#1dabf0" TextColor="White"/>

    </StackLayout>
</ContentPage>